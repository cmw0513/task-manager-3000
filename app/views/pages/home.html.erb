<h1>Task Manager Pro 3000</h1>

<div class="tasks">

  <h2>Example of task list</h2>

  <ul>
    <% @tasks.each do |task| %>
      <li>
        <%= task.done? ? "[X]" : "[ ]" %>
        <%= task.description %>
        <% if task.due_date %>
          (due <%= task.due_date.strftime("%B %d") %>)
        <% end %>
      </li>
    <% end %>
  </ul>

</div>

<div class="testimonials">

  <h2>What they say about our service</h2>

  <% @testimonials.each do |testimonial| %>
    <%= render partial: "testimonials/testimonial", object: testimonial %>
  <% end %>

</div>
